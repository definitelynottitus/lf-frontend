---
const {headline, background = ""} = Astro.props;
---
<section class={background? background.concat(" bg-cover bg-center w-full") : "bg-gradient-to-tr from-teal-200 to-lime-200"}>
        <div class="grid backdrop-brightness-50 max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-10">
            <div class="mr-auto place-self-center lg:col-span-7">
                <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-white">{headline}</h1>
                <div class="max-w-2xl mb-6 font-light text-gray-200 lg:mb-8 md:text-lg lg:text-xl">
                    <slot/>
                </div>
            </div>
        </div>
</section>