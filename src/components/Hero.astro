---
const {headline, img} = Astro.props;
---
<section class="relative grid grid-cols-2">
    <div class="relative gap-4">
        <h1 class="text-green-700 text-2xl mx-4">{headline}</h1>
        <slot/>
    </div>
    <img src={img} alt="" class="absolute -z-10 w-full h-full top-0 left-0 object-cover">
</section>

