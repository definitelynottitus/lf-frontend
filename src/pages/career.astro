---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroLayout2 from "../layouts/HeroLayout2.astro";
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import { useStoryblokApi } from '@storyblok/astro'

const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get('cdn/stories/hiring-posts/listings', {
  version: import.meta.env.DEV ? "draft" : "published",
});

const content = data.story.content;
const pageTitle = "Join Us | Ligher Foodprint";
const headline = "Volunteer With Us"
---

<BaseLayout pageTitle = {pageTitle}>
    <HeroLayout2 headline = {headline} background = "bg-hero-pattern-2" id = "storyblok"></HeroLayout2>
    <StoryblokComponent blok={content} id="storyblok"/>
</BaseLayout>

